<!DOCTYPE html>
<html>
<head>
  <title>Superheroes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery.countdown', 'data-turbolinks-track' => true %>
</head>
<body>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="#">Brand</a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li class="<%= 'active' if params[:action] == 'page_1' %>">
		          <%= link_to 'Pagina 1', experiments_page_1_path %>
		       </li>
		        <li class="<%= 'active' if params[:action] == 'page_2' %>">
		          <%= link_to 'Pagina 2', experiments_page_2_path %>
		        </li>
		        <li class="<%= 'active' if params[:action] == 'page_3' %>">
		          <%= link_to 'Pagina 3', experiments_page_3_path %>
		        </li>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
	          <ul class="dropdown-menu">
	           <li class="<%= 'active' if params[:action] == 'page_1' %>">
		          <%= link_to 'Pagina 1', experiments_page_1_path %>
		       </li>
		        <li class="<%= 'active' if params[:action] == 'page_2' %>">
		          <%= link_to 'Pagina 2', experiments_page_2_path %>
		        </li>
		        <li class="<%= 'active' if params[:action] == 'page_3' %>">
		          <%= link_to 'Pagina 3', experiments_page_3_path %>
		        </li>

	          </ul>
	        </li>
	      </ul>
	      <form class="navbar-form navbar-left">
	        <div class="form-group">
	          <input type="text" class="form-control" placeholder="Search">
	        </div>
	        <button type="submit" class="btn btn-default">Submit</button>
	      </form>
	      
	  </div><!-- /.container-fluid -->
	</nav>

<%= yield %>

</body>
</html>
